@{
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}

@section Scripts{
    <script>
        var table = document.querySelector("table");
        table.onclick = function onTableClick() {
        table.style = "background-color: yellow;"
        }
    </script>
}

@model IEnumerable<Student>
<a asp-action="Create" class="btn btn-primary">Create student</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ ĐT</th>
            <th>Địa chỉ</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBirth</td>
                @{
                    string tr = "";
                    switch (s.Branch)
                    {
                        case Branch.IT:
                            tr = "CNTT";
                            break;
                        case Branch.BE:
                            tr = "Kinh tế";
                            break;
                        case Branch.CE:
                            tr = "Công trình";
                            break;
                        case Branch.EE:
                            tr = "Điên- Điện tử";
                            break;
                    }
                    <td>@tr</td>
                    <td>@(s.Gender == Gender.Male?"Nam":"Nữ")</td>
                    <td>@(s.IsRegular ? "Chính quy":"Phi chính quy")</td>
                    <td>@s.Email</td>
                }
            </tr>
        }
    </tbody>
</table>

